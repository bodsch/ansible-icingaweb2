---
extends: default
rules:
  line-length:
    max: 195
    level: warning
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  indentation:
    spaces: 2
  empty-lines:
    max: 1
    level: error
  comments: disable
  comments-indentation: disable
  truthy: disable
  trailing-spaces: enable
  new-line-at-end-of-file: enable
  new-lines:
    type: unix

ignore: |
  tests/
  molecule/
  .molecule/
  .travis.yml
  .tox
  .github
